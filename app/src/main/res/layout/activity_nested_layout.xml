<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F">
    <TextView
        android:id="@+id/tvand03"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello AND 03"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Layouts"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <View
        android:layout_height="85sp"
        android:layout_width="73sp"
        android:id="@+id/vcircle"
        android:background="@drawable/blue_circle"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvwelcome"

        />
    <TextView
        android:id="@+id/tvname"
        android:layout_marginTop="150sp"
        android:layout_below="@+id/vcircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Llyod Dcosta"
        android:textColor="#FF0000"
        android:textSize="22sp"
        android:layout_marginLeft="10sp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_idsvg" />
    <TextView
        android:id="@+id/tvage"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age : 50"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="22sp"
        android:layout_marginLeft="10sp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:backgroundTint="@color/green"
        android:id="@+id/btnNext"
        android:text="Next"
        android:padding="15dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        />
    <View
        android:layout_width="140sp"
        android:layout_height="12sp"
        android:id="@+id/v3"
        android:layout_above="@+id/btnNext"
        android:background="#c4c4c4"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="185sp"
        />
    <View
        android:layout_width="166sp"
        android:layout_height="20sp"
        android:id="@+id/v2"
        android:layout_above="@+id/v3"
        android:background="#c4c4c4"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="185sp"
        />
    <View
        android:layout_width="183sp"
        android:layout_height="31sp"
        android:layout_above="@+id/v2"
        android:background="#c4c4c4"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="185sp"
        />





</RelativeLayout>